{
  "name": "journo-crawler",
  "version": "1.0.0",
  "type": "module",
  "description": "This is a web scraper designed to extract structured article data from news websites.",
  "dependencies": {
    "crawlee": "3.15.3",
    "mongodb": "6.15.0",
    "playwright": "1.57.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vercel/node": "^5.5.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "start": "npm run start:dev",
    "start:prod": "node dist/main.js",
    "start:dev": "tsx --env-file=.env src/main.ts",
    "build": "tsc",
    "test": "echo \"Error: oops, the actor has no tests yet, sad!\" && exit 1",
    "cleanup": "tsx --env-file=.env src/cleanupOldEntries.ts",
    "backup": "tsx --env-file=.env src/backupCollection.ts",
    "restore": "tsx --env-file=.env src/restoreCollection.ts",
    "postinstall": "npx crawlee install-playwright-browsers"
  },
  "author": "Hendrik Wichern"
}